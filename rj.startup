# ===================================
# Router RJ - STARTUP CORREGIDO
# Enlaces: RWX(eth0), LJ(eth1), RK(eth2), RG(eth3)
# ===================================

# --------------------------
# Direccionamiento IP
# --------------------------

# Enlace RJ-RWX
ip addr add 192.168.100.38/30 dev eth0
ip link set eth0 up

# LAN LJ
ip addr add 10.2.15.254/20 dev eth1
ip link set eth1 up

# Enlace RJ-RK
ip addr add 192.168.100.45/30 dev eth2
ip link set eth2 up

# Enlace RJ-RG
ip addr add 192.168.100.41/30 dev eth3
ip link set eth3 up

# --------------------------
# Habilitar reenv√≠o IP
# --------------------------
sysctl -w net.ipv4.ip_forward=1

# --------------------------


#------------------------------
# Iniciar Quagga (Zebra + OSPF)
#------------------------------
sleep 2

/etc/init.d/quagga start

#------------------------------
# Mantener contenedor activo
#------------------------------
sleep infinity
